{% extends 'base.html.twig' %}

{% block title %}AgendA - Liste entretien
{% endblock %}

{% block body %}
	<h2 style="color:grey" class="pt-5 pb-3">Liste entretien
	</h2>

	<table class="table table-dark">
		<thead>
			<tr>
				<th scope="col">Date</th>
				<th scope="col">Heure</th>
				<th scope="col">Lieu</th>
			</tr>
		</thead>
		<tbody>
			{% for entretien in entretiens %}
				<tr>

					<td>{{ entretien.date|date("d/m/Y")}}</td>
					<td>{{ entretien.heure|date("H:i") }}</td>
					<td>{{ entretien.lieu }}</td>

				</tr>
			{% else %}
				<tr>
					<td colspan="4">Aucune donnÃ©e</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
