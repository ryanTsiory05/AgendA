{% extends 'base.html.twig' %}

{% block title %}AgendA - Home
{% endblock %}


{% block body %}


	<!-- content-->
	<div class="container-fluid mt-5">
		<h2 style="color:grey">Liste des entretiens
		</h2>
		<hr style="color:grey">
		<div
			class="row justify-content-between mt-4">
			<!-- container card-->
			<div class="col-lg-8">

				<div class="row">
					{% for entretien in entretien %}
						<div
							class="col-lg-4">
							<!-- card-->

							<div class="card mb-4">
								<div class="card-body">

									<div class="small ">{{ entretien.date|date("d/m/Y")}}
										à
										{{ entretien.heure|date("H:i")}}</div>
									<h3 class="card-title h4">{{ entretien.lieu}}</h3>
									<hr>
									<p class="card-text">

										<i>Candidat :</i>

										<br>
										{{ entretien.candidat.nom}}
										{{ entretien.candidat.prenom}}<br>
										<small class="small text-muted">{{ entretien.candidat.email}}</small>
									</p>
									<a class="btn btn-primary" href="{{ path('modif_entretien', {'id': entretien.id}) }}">Modifier →</a>
									<a class="btn btn-danger" href="{{ path('supp_entretien', {'id': entretien.id}) }}" onclick="return confirm('Supprimer cet entretien?')">Supprimer ×</a>

								</div>

							</div>


						</div>
					{% else %}

						<p style="color:grey">" Aucune donnée "</p>

					{% endfor %}

				</div>
			</div>
			<!-- Side add-->
			<div
				class="col-lg-3">
				<!-- Add-->
				<div class="card mb-4 bg-dark">
					<div class="card-header">Nouvel entretien</div>
					<div class="card-body">
						<div class="input-group">
							<form>
								<div class="row justify-content-center">
									<div class="">
										<a href="{{ path('ajout_entretien_candidat')}}" class="btn btn-primary btn-sm">
											Nouveau candidat
										</a>
										<a href="{{ path('ajout_entretien')}}" class="btn btn-warning btn-sm">
											Candidat existant
										</a>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	{% endblock %}
	{% block javascripts %}
		<!--BootstrapcoreJS-->
		<scriptsrc="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
		<!--CorethemeJS-->
		<scriptsrc="js/scripts.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
	{% endblock %}
